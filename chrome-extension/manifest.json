{
  "manifest_version": 3,
  "name": "美女相册信息提取器",
  "version": "1.0.0",
  "description": "获取相册URL和提取演员信息的Chrome插件，支持V2PH和俊美图网站",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://www.v2ph.com/*",
    "https://cdn.v2ph.com/*",
    "https://www.junmeitu.com/*",
    "https://i.wujituku.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.v2ph.com/*", "https://www.junmeitu.com/*"],
      "js": [
        "utils/image-processor.js",
        "utils/yaml-generator.js",
        "utils/image-converter.js",
        "ui/toast.js",
        "ui/button-manager.js",
        "parsers/base-parser.js",
        "parsers/v2ph-parser.js",
        "parsers/junmeitu-parser.js",
        "extractors/v2ph-actor-extractor.js",
        "extractors/junmeitu-actor-extractor.js",
        "core/actor-info-extractor.js",
        "core/album-url-extractor.js",
        "core/message-handler.js",
        "content.js"
      ],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "美女相册信息提取器"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
